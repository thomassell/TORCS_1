<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/mainActivityScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignStart="@+id/Messages"
                android:layout_below="@+id/Messages"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_corners"
                android:onClick="onClick"
                android:text="@string/Results"
                android:textColor="@color/white"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignStart="@+id/button2"
                android:layout_below="@+id/button2"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_corners"
                android:onClick="onClick"
                android:text="@string/Points"
                android:textColor="@color/white"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignStart="@+id/button3"
                android:layout_below="@+id/button3"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_corners"
                android:onClick="onClick"
                android:text="@string/TON"
                android:textColor="@color/white"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corners"
                android:onClick="onClick"
                android:text="@string/Flyers"
                android:textColor="@color/white"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignStart="@+id/pictures"
                android:layout_below="@+id/pictures"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_corners"
                android:onClick="onClick"
                android:text="Sponsors"
                android:textColor="@color/white"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pictures"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignStart="@+id/button4"
                android:layout_below="@+id/button4"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_corners"
                android:onClick="onClick"
                android:text="Pictures"
                android:textColor="@color/white"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/GPS"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignStart="@+id/button1"
                android:layout_below="@+id/button1"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_corners"
                android:onClick="onClick"
                android:text="Navigation to next race"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/Messages"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignStart="@+id/GPS"
                android:layout_below="@+id/GPS"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_corners"
                android:onClick="onClick"
                android:text="Messages"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_height="125dp"
                android:layout_alignStart="@+id/button5"
                android:layout_below="@+id/button5"
                android:contentDescription="@string/logo"
                android:src="@drawable/torcs_logo_alyssa" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
