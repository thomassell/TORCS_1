<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:background="@color/grey" >

    	<Button
    	    android:id="@+id/open_b"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_yellow"
    	    android:text="Open B"
    	    android:textColor="@color/black"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/two_fifty_b"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/open_b"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_yellow"
    	    android:text="250F B"
    	    android:textColor="@color/black"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/sport_b"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/two_fifty_b"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_yellow"
    	    android:text="Sport 13-29 B"
    	    android:textColor="@color/black"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/thirty_b"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/sport_b"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_yellow"
    	    android:text="Vet 30+ B"
    	    android:textColor="@color/black"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/fourty_b"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/thirty_b"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_yellow"
    	    android:text="Master 40+ B"
    	    android:textColor="@color/black"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/fifty_b"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/fourty_b"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_yellow"
    	    android:text="Senior 50+ B"
    	    android:textColor="@color/black"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
		<Button
    	    android:id="@+id/wom_b"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/fifty_b"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_yellow"
    	    android:text="Women B"
    	    android:textColor="@color/black"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	
	</RelativeLayout>
</ScrollView>
