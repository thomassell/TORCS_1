<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:background="@color/grey" >

    	<Button
    	    android:id="@+id/open_c"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_black"
    	    android:text="Open C"
    	    android:textColor="@color/white"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/two_fifty_c"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/open_c"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_black"
    	    android:text="250F C"
    	    android:textColor="@color/white"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/sport_c"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/two_fifty_c"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_black"
    	    android:text="Sport 13-29 C"
    	    android:textColor="@color/white"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/thirty_c"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/sport_c"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_black"
    	    android:text="Vet 30+ C"
    	    android:textColor="@color/white"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/fourty_c"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/thirty_c"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_black"
    	    android:text="Master 40+ C"
    	    android:textColor="@color/white"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/fifty_c"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/fourty_c"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_black"
    	    android:text="Senior 50+ C"
    	    android:textColor="@color/white"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
		<Button
			android:id="@+id/sixty_c"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/fifty_c"
			android:layout_marginTop="15dp"
			android:background="@drawable/rounded_corners_black"
			android:textStyle="bold"
			android:text="65cc C"
			android:textColor="@color/white"
			android:width="200dp"
			android:onClick="onClick" />
		<Button
			android:id="@+id/eighty_c"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/sixty_c"
			android:layout_marginTop="15dp"
			android:background="@drawable/rounded_corners_black"
			android:textStyle="bold"
			android:text="85cc C"
			android:textColor="@color/white"
			android:width="200dp"
			android:onClick="onClick" />
    	<Button
    	    android:id="@+id/wom_c"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/eighty_c"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_black"
    	    android:text="Women C"
    	    android:textColor="@color/white"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	
	</RelativeLayout>
</ScrollView>
