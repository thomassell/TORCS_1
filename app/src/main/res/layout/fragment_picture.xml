<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.thomas_sell.torcs.Picture"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Mary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:onClick="onClick"
            android:text="Mary Parkinson's Photos"
            android:textColor="@color/white"
            android:textSize="@dimen/main_font_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Chris"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Mary"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:onClick="onClick"
            android:text="Chris Jones' Photos"
            android:textColor="@color/white"
            android:textSize="@dimen/main_font_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Davey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Chris"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:onClick="onClick"
            android:text="Davey Kroll's Photos"
            android:textColor="@color/white"
            android:textSize="@dimen/main_font_size"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>
