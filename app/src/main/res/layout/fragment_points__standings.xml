<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@color/grey" >

	<RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="30dp" >
	    
    	<Button
    	    android:id="@+id/class_pro"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentTop="true"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="0dp"
    	    android:background="@drawable/rounded_corners"
    	    android:onClick="onClick"
    	    android:text="Pro"
    	    android:textColor="@color/yellow"
    	    android:textStyle="bold"
    	    android:textSize="@dimen/points_font_size"
    	    android:width="200dp" />

        <Button
            android:id="@+id/class_a"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/class_pro"
            android:layout_below="@+id/class_pro"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_red"
            android:onClick="onClick"
            android:text="A"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/points_font_size"
            android:width="200dp" />

        <Button
            android:id="@+id/class_b"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/class_a"
            android:layout_below="@+id/class_a"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_yellow"
            android:onClick="onClick"
            android:text="B"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/points_font_size"
            android:width="200dp" />

        <Button
            android:id="@+id/class_c"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/class_b"
            android:layout_below="@+id/class_b"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_black"
            android:onClick="onClick"
            android:text="C"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/points_font_size"
            android:width="200dp" />

		<Button
			android:id="@+id/class_d"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignStart="@+id/class_c"
			android:layout_below="@+id/class_c"
			android:layout_marginTop="20dp"
			android:background="@drawable/rounded_corners_black"
			android:onClick="onClick"
			android:text="D"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:textSize="@dimen/points_font_size"
			android:width="200dp" />

        <Button
            android:id="@+id/class_open"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/class_d"
            android:layout_below="@+id/class_d"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_white"
            android:onClick="onClick"
            android:text="Open"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/points_font_size"
            android:width="200dp" />

		<Button
			android:id="@+id/class_sxs"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignStart="@+id/class_open"
			android:layout_below="@+id/class_open"
			android:layout_marginTop="20dp"
			android:background="@drawable/rounded_corners_white"
			android:onClick="onClick"
			android:text="SXS"
			android:textColor="@color/black"
			android:textStyle="bold"
			android:textSize="@dimen/points_font_size"
			android:width="200dp" />

	</RelativeLayout>
</ScrollView>
