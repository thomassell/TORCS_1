<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:background="@color/grey" >

		<Button
			android:id="@+id/sxs_pro"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="15dp"
			android:background="@drawable/rounded_corners"
			android:text="SXS Pro"
			android:textColor="@color/yellow"
			android:textStyle="bold"
			android:width="200dp"
			android:onClick="onClick" />
    	<Button
    	    android:id="@+id/sxs_turbo"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
			android:layout_below="@+id/sxs_pro"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_red"
    	    android:text="SXS Turbo"
    	    android:textColor="@color/white"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
    	<Button
    	    android:id="@+id/sxs_non_turbo"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_below="@+id/sxs_turbo"
    	    android:layout_marginTop="15dp"
    	    android:background="@drawable/rounded_corners_yellow"
    	    android:text="SXS Non Turbo"
    	    android:textColor="@color/black"
    	    android:textStyle="bold"
    	    android:width="200dp"
    	    android:onClick="onClick" />
		<Button
			android:id="@+id/sxs_800"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/sxs_non_turbo"
			android:layout_marginTop="15dp"
			android:background="@drawable/rounded_corners_black"
			android:text="SXS 800"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:width="200dp"
			android:onClick="onClick" />
    	<Button
			android:id="@+id/sxs_women"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/sxs_800"
			android:layout_marginTop="15dp"
			android:background="@drawable/rounded_corners_white"
			android:textStyle="bold"
			android:text="SXS Women"
			android:textColor="@color/black"
			android:width="200dp"
			android:onClick="onClick" />

	</RelativeLayout>
</ScrollView>
